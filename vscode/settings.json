{
  // Atom Keymap Extension
  // ---------------------------------------------------------------------------
  
  "atomKeymap.promptV3Features": true,
  
  // Code Spell Checker
  // ---------------------------------------------------------------------------

  "cSpell.userWords": [
    "Guid",
    "Keymap",
    "Menlo",
    "Monokai",
    "Neovim",
    "gitlens",
    "lifecycle",
    "monospace",
    "oauth",
    "postcss",
    "pylint",
    "repo",
    "stylelint",
    "subdomain"
  ],
  
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],

  // Color Highlight Extension
  // ---------------------------------------------------------------------------

  "color-highlight.markerType": "dot-after",
  "color-highlight.markRuler": false,

  // Editor
  // ---------------------------------------------------------------------------

  "editor.colorDecorators": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.letterSpacing": 0.3,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,

  "[javascript]": {
    "editor.rulers": [100]
  },
  "[javascriptreact]": {
    "editor.rulers": [100]
  },

  // Emmet
  // ---------------------------------------------------------------------------

  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "postcss": "css",
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "postcss": "css"
  },

  // ESLint
  // ---------------------------------------------------------------------------
  
  "eslint.autoFixOnSave": false,
  
  // Files
  // ---------------------------------------------------------------------------
  
  "files.associations": {
    "*.css": "postcss",
    ".*": "shellscript"
  },
  "files.autoSave": "onFocusChange",
  
  // GitLens
  // ---------------------------------------------------------------------------
  
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.resultsExplorer.location": "scm",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.historyExplorer.location": "scm",
  "gitlens.keymap": "none",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  // JavaScript
  // ---------------------------------------------------------------------------

  "javascript.implicitProjectConfig.experimentalDecorators": true,

  // Prettier
  // ---------------------------------------------------------------------------

  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true,

  // Python Extension
  // ---------------------------------------------------------------------------
  
  "python.pythonPath": "/usr/local/bin/python",

  // Search
  // ---------------------------------------------------------------------------

  "search.location": "sidebar",

  // Stylelint Extension
  // ---------------------------------------------------------------------------

  // Override default CSS validation in favor of Stylelint extension
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Terminal
  // ---------------------------------------------------------------------------

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.2,

  // Window
  // ---------------------------------------------------------------------------

  "window.zoomLevel": 1,

  // Workbench
  // ---------------------------------------------------------------------------

  "workbench.colorTheme": "Monokai Classic",
  "workbench.iconTheme": "file-icons",
  "workbench.startupEditor": "none",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "workbench.editor.tabCloseButton": "off",

  // Zen Mode
  // ---------------------------------------------------------------------------

  "zenMode.centerLayout": false,
}
