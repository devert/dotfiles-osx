{
  // Atom Keymap Extension
  // ---------------------------------------------------------------------------
  
  "atomKeymap.promptV3Features": true,
  
  // Code Spell Checker
  // ---------------------------------------------------------------------------

  "cSpell.userWords": [
    "Flyout",
    "Guid",
    "Hacky",
    "Keymap",
    "Menlo",
    "Monokai",
    "Neovim",
    "Unfocus",
    "clickshield",
    "gitlens",
    "lifecycle",
    "monospace",
    "oauth",
    "performant",
    "postcss",
    "pylint",
    "repo",
    "stylelint",
    "subdomain",
    "unmount"
  ],
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "cSpell.showStatus": false,
  
  // Color Highlight Extension
  // ---------------------------------------------------------------------------
  
  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,
  
  // CSS Class Completion
  // ---------------------------------------------------------------------------
  
  "html-css-class-completion.enableEmmetSupport": true,

  // Editor
  // ---------------------------------------------------------------------------
  
  "editor.colorDecorators": false,
  "editor.cursorBlinking": "phase",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.letterSpacing": 0.3,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.selectionHighlight": false,
  "editor.formatOnSave": false,
  "[javascript]": {
    "editor.formatOnSave": false,
  },
  "[json]": {
    "editor.formatOnSave": false,
  },
  "[jsonc]": {
    "editor.formatOnSave": false,
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.wordBasedSuggestions": false,
  "editor.suggestOnTriggerCharacters": false,
      
  // Emmet
  // ---------------------------------------------------------------------------
  
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "postcss": "css",
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "postcss": "css"
  },
  
  // ESLint
  // ---------------------------------------------------------------------------
  
  "eslint.autoFixOnSave": false,
  "eslint.packageManager": "yarn",

  // Exports Autocomplete
  // ---------------------------------------------------------------------------
  
  "vscode-exports-autocomplete.addSpacingAroundCurlyBraces": true,
  
  // Files
  // ---------------------------------------------------------------------------
  
  "files.associations": {
    "*.css": "postcss",
    ".*": "shellscript"
  },
  "files.autoSave": "onFocusChange",
  
  // GitLens
  // ---------------------------------------------------------------------------
  
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.resultsExplorer.location": "scm",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.historyExplorer.location": "scm",
  "gitlens.keymap": "none",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.fileHistory.location": "scm",
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.views.lineHistory.location": "scm",
  "gitlens.views.compare.location": "scm",
  "gitlens.views.search.location": "scm",

  // Open In Browser
  // ---------------------------------------------------------------------------
  
  "open-in-browser.default": "Google Chrome",

  // HTML
  // ---------------------------------------------------------------------------
  
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,

  // JavaScript
  // ---------------------------------------------------------------------------
  
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  
  // Python Extension
  // ---------------------------------------------------------------------------
  
  "python.pythonPath": "/usr/local/bin/python",
  
  // SCM
  // ---------------------------------------------------------------------------
  
  "scm.diffDecorations": "gutter",
  
  // Search
  // ---------------------------------------------------------------------------
  
  "search.location": "sidebar",
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  // Stylelint Extension
  // ---------------------------------------------------------------------------

  // Override default CSS validation in favor of Stylelint extension
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Typescript
  // ---------------------------------------------------------------------------

  "typescript.validate.enable": false,

  // Terminal
  // ---------------------------------------------------------------------------

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.2,

  // Window
  // ---------------------------------------------------------------------------

  "window.zoomLevel": 1,
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",

  // Workbench
  // ---------------------------------------------------------------------------

  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "file-icons",
  "workbench.startupEditor": "none",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.statusBar.visible": true,
  "workbench.statusBar.feedback.visible": false,
  "workbench.activityBar.visible": false,
  "workbench.editor.tabCloseButton": "off",
  
  // Make info, error and warning decorations in overview ruler transparent
  "workbench.colorCustomizations": {
    "editorOverviewRuler.errorForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.warningForeground": "#0000",
    "list.inactiveFocusBackground": "#0000"
  },

  // Zen Mode
  // ---------------------------------------------------------------------------

  "zenMode.centerLayout": false
}
