{
  // Breadcrumbs
  // ---------------------------------------------------------------------------

  "breadcrumbs.enabled": true,

  // Chat
  // ---------------------------------------------------------------------------

  "chat.tools.terminal.autoApprove": {
    "pnpm": true
  },

  // Code Rabbit
  // ---------------------------------------------------------------------------

  "coderabbit.autoReviewMode": "disabled",

  // Code Spell Checker
  // ---------------------------------------------------------------------------

  "cSpell.userWords": [
    "Adsense",
    "backend",
    "browserslist",
    "camelcase",
    "Charteris",
    "clickshield",
    "clsx",
    "customizations",
    "dropdown",
    "esnext",
    "Fastify",
    "Flyout",
    "gitlens",
    "Guid",
    "Hacky",
    "Helvetica",
    "keyframes",
    "Keymap",
    "Leadpage",
    "Leadpages",
    "lifecycle",
    "Menlo",
    "Monokai",
    "monospace",
    "Neovim",
    "oauth",
    "oklch",
    "performant",
    "postcss",
    "prepopulate",
    "pylint",
    "pytest",
    "refetch",
    "repo",
    "rerender",
    "scrollbar",
    "Stateful",
    "Strikethrough",
    "stylelint",
    "subdomain",
    "subheadline",
    "templating",
    "textbox",
    "transpiled",
    "uncategorized",
    "Unfocus",
    "unhover",
    "unhovered",
    "unmock",
    "unmount",
    "unstyled",
    "woff"
  ],
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "cSpell.showStatus": false,

  // Color Highlight Extension
  // ---------------------------------------------------------------------------

  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,

  // Docker
  // ---------------------------------------------------------------------------
  "docker.extension.dockerEngineAvailabilityPrompt": false,

  // Editor
  // ---------------------------------------------------------------------------

  "editor.accessibilitySupport": "off",
  "editor.colorDecorators": false,
  "editor.cursorBlinking": "phase",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.fontFamily": "OperatorMono NF, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": 400,
  "editor.letterSpacing": 0.3,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.tabCompletion": "onlySnippets",
  "editor.selectionHighlight": false,
  "editor.stickyScroll.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.quickSuggestions": {
    "comments": false,
    "other": false,
    "strings": "on"
  },
  "editor.quickSuggestionsDelay": 100000,
  "editor.wordBasedSuggestions": "off",
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.parameterHints.enabled": false,
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lightbulb.enabled": "off",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "[markdown]": {
    "editor.wordWrap": "off"
  },

  // Formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Emmet
  // ---------------------------------------------------------------------------

  "emmet.includeLanguages": {
    "postcss": "css",
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "postcss": "css"
  },

  // ESLint
  // ---------------------------------------------------------------------------

  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc"
  ],

  // File Explorer
  // ---------------------------------------------------------------------------

  "explorer.openEditors.visible": 1,

  // Files
  // ---------------------------------------------------------------------------

  "files.exclude": {
    "**/*.snap": true
  },
  "files.associations": {
    ".*": "shellscript",
    "*.css": "tailwindcss",
    "*.json": "json",
    ".babelrc": "json",
    ".prettierrc": "json",
    ".eslintrc.json": "jsonc",
    "tsconfig.json": "jsonc"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Github Copilot
  // ---------------------------------------------------------------------------

  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "remote.extensionKind": {
    "GitHub.copilot": ["ui"],
    "GitHub.copilot-chat": ["ui"]
  },

  // GitLens
  // ---------------------------------------------------------------------------

  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.keymap": "none",
  "gitlens.gitkraken.mcp.autoEnabled": false,

  // Open In Browser
  // ---------------------------------------------------------------------------

  "open-in-browser.default": "Google Chrome",

  // HTML
  // ---------------------------------------------------------------------------

  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,

  // JavaScript
  // ---------------------------------------------------------------------------

  "javascript.updateImportsOnFileMove.enabled": "always",

  // Lua
  // ---------------------------------------------------------------------------

  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },

  // Playwright Extension
  // ---------------------------------------------------------------------------

  "playwright.reuseBrowser": true,
  "playwright.showTrace": false,

  // Prettier Extension
  // ---------------------------------------------------------------------------

  "prettier.requireConfig": true,

  // Python and Extension(s) - Black and iSort
  // ---------------------------------------------------------------------------

  // "black-formatter.importStrategy": "useBundled",
  "isort.importStrategy": "useBundled",
  "isort.args": ["--profile", "black"],

  "python.defaultInterpreterPath": "~/.pyenv/versions/3.8.16/bin/python3",
  "python.terminal.activateEnvironment": false,
  "python.venvPath": "~/.pyenv",
  "python.venvFolders": ["~/.pyenv/versions"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.rulers": [88],
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // Rust
  // ---------------------------------------------------------------------------

  // "rust-analyzer.inlayHints.renderColons": false,
  // "rust-analyzer.inlayHints.typeHints.enable": false,
  // "rust-analyzer.inlayHints.parameterHints.enable": false,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  // SCM
  // ---------------------------------------------------------------------------

  "scm.diffDecorations": "gutter",
  "diffEditor.ignoreTrimWhitespace": false,

  // Search
  // ---------------------------------------------------------------------------

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  // Typescript
  // ---------------------------------------------------------------------------

  // "typescript.validate.enable": false,

  // Terminal
  // ---------------------------------------------------------------------------

  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",

  // Vim
  // ---------------------------------------------------------------------------

  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "GitHub.copilot": 2
  },
  "vim.leader": "<Space>",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.useSystemClipboard": true,
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.visualstar": true,
  // "vim.smartRelativeLine": true,
  "vim.foldfix": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerForegroundColorOneChar": "#ff6188",
  "vim.easymotionMarkerForegroundColorTwoCharFirst": "#78dce8",
  "vim.easymotionMarkerForegroundColorTwoCharSecond": "#78dce8",
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["turboConsoleLog.displayLogMessage"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-j>"],
      "after": ["3", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["3", "k"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.toggleFold"]
    },
    {
      "before": ["<leader>", "F"],
      "commands": ["editor.foldAll"]
    },
    {
      "before": ["<leader>", "<leader>", "u"],
      "commands": ["editor.unfoldAll"]
    },
    {
      "before": ["<leader>", "u", "c"],
      "commands": ["editor.emmet.action.balanceOutward"]
    },
    {
      "before": ["<leader>", "u", "i"],
      "commands": ["editor.emmet.action.balanceInward"]
    },
    {
      "before": ["<leader>", "u", "d"],
      "commands": ["editor.emmet.action.splitJoinTag"]
    },
    {
      "before": ["<leader>", "u", "e"],
      "commands": ["editor.emmet.action.matchTag"]
    },
    {
      "before": ["<leader>", "u", "t"],
      "commands": ["editor.emmet.action.updateTag"]
    },
    {
      "before": ["<leader>", "c", "u"],
      "commands": ["editor.action.transformToUppercase"]
    },
    {
      "before": ["<leader>", "c", "l"],
      "commands": ["editor.action.transformToLowercase"]
    },
    {
      "before": ["<leader>", "c", "s"],
      "commands": ["editor.action.transformToSnakecase"]
    },
    {
      "before": ["<leader>", "c", "t"],
      "commands": ["editor.action.transformToTitlecase"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["extension.changeCase.camel"]
    },
    {
      "before": ["<leader>", "c", "k"],
      "commands": ["extension.changeCase.kebab"]
    },
    {
      "before": ["<leader>", "l", "d"],
      "commands": ["turboConsoleLog.deleteAllLogMessages"]
    },
    {
      "before": ["<leader>", "l", "c"],
      "commands": ["turboConsoleLog.commentAllLogMessages"]
    },
    {
      "before": ["<leader>", "l", "u"],
      "commands": ["turboConsoleLog.uncommentAllLogMessages"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["testing.runAtCursor"]
    },
    {
      "before": ["<leader>", "t", "f"],
      "commands": ["testing.runCurrentFile"]
    },
    {
      "before": ["<leader>", "<leader>", "w"],
      "commands": ["workbench.action.switchWindow"]
    }
  ],

  // Window
  // ---------------------------------------------------------------------------

  "window.commandCenter": false,
  "window.zoomLevel": 1,
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",
  "window.title": "${rootName}",

  // Workbench
  // ---------------------------------------------------------------------------

  "workbench.editor.decorations.colors": false,
  "workbench.editor.decorations.badges": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.wrapTabs": true,
  "workbench.colorTheme": "Monokai Pro",
  "workbench.startupEditor": "none",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.activityBar.location": "hidden",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.panel.defaultLocation": "right",

  // Make info, error and warning decorations in overview ruler transparent
  "workbench.colorCustomizations": {
    "editorInlayHint.background": "#0000",
    "editorOverviewRuler.errorForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.warningForeground": "#0000",
    "list.inactiveFocusBackground": "#0000"
  },

  // Zen Mode
  // ---------------------------------------------------------------------------

  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.showTabs": "none",
  "git.openRepositoryInParentFolders": "never"
}
