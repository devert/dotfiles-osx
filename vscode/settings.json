{
  // Atom Keymap Extension
  // ---------------------------------------------------------------------------

  "atomKeymap.promptV3Features": true,

  // Breadcrumbs
  // ---------------------------------------------------------------------------

  "breadcrumbs.enabled": true,

  // Code Spell Checker
  // ---------------------------------------------------------------------------

  "cSpell.userWords": [
    "Flyout",
    "Guid",
    "Hacky",
    "Helvetica",
    "Keymap",
    "Leadpage",
    "Leadpages",
    "Menlo",
    "Monokai",
    "Neovim",
    "Stateful",
    "Strikethrough",
    "Unfocus",
    "backend",
    "browserslist",
    "clickshield",
    "clsx",
    "customizations",
    "dropdown",
    "esnext",
    "gitlens",
    "keyframes",
    "lifecycle",
    "monospace",
    "oauth",
    "performant",
    "postcss",
    "pylint",
    "pytest",
    "refetch",
    "repo",
    "rerender",
    "scrollbar",
    "stylelint",
    "subdomain",
    "subheadline",
    "templating",
    "transpiled",
    "uncategorized",
    "unhover",
    "unhovered",
    "unmock",
    "unmount",
    "unstyled",
    "woff"
  ],
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "cSpell.showStatus": false,

  // Color Highlight Extension
  // ---------------------------------------------------------------------------

  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,

  // Diff Editor
  // ---------------------------------------------------------------------------

  "diffEditor.renderSideBySide": false,

  // Editor
  // ---------------------------------------------------------------------------

  "editor.colorDecorators": false,
  "editor.cursorBlinking": "phase",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.letterSpacing": 0.3,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.selectionHighlight": false,
  "editor.scrollBeyondLastLine": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll": true
  },
  "editor.quickSuggestions": {
    "comments": false,
    "other": false,
    "strings": false
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.wordBasedSuggestions": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.parameterHints.enabled": false,

  // Formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust"
  },

  // Emmet
  // ---------------------------------------------------------------------------

  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "postcss": "css",
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "postcss": "css"
  },

  // ESLint
  // ---------------------------------------------------------------------------

  "eslint.packageManager": "yarn",
  "eslint.alwaysShowStatus": true,

  // File Explorer
  // ---------------------------------------------------------------------------

  "explorer.openEditors.visible": 0,

  // Files
  // ---------------------------------------------------------------------------

  "files.exclude": {
    "**/*.snap": true
  },
  "files.associations": {
    ".*": "shellscript",
    "*.css": "css",
    "*.json": "json",
    ".babelrc": "json",
    ".prettierrc": "json",
    ".eslintrc.json": "jsonc"
  },

  // GitLens
  // ---------------------------------------------------------------------------

  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.keymap": "none",

  // Open In Browser
  // ---------------------------------------------------------------------------

  "open-in-browser.default": "Google Chrome",

  // HTML
  // ---------------------------------------------------------------------------

  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,

  // JavaScript
  // ---------------------------------------------------------------------------

  "javascript.updateImportsOnFileMove.enabled": "always",

  // Prettier Extension
  // ---------------------------------------------------------------------------

  "prettier.requireConfig": true,

  // Python Extension
  // ---------------------------------------------------------------------------

  "python.pythonPath": "~/.pyenv/versions/3.9.0/bin/python3",
  "python.linting.enabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.pyenv/versions/3.9.0/bin/black",
  "python.terminal.activateEnvironment": false,
  // "python.sortImports.path": "~/.pyenv/versions/3.9.0/bin/isort",
  // "python.sortImports.args": [
  //   "-rc",
  //   "-sp isort.cfg"
  //  ],
  "python.venvPath": "~/.pyenv",
  "python.venvFolders": ["~/.pyenv/versions"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.rulers": [88]
    // "editor.codeActionsOnSave": {
    //   "source.organizeImports": true
    // },
  },

  // SCM
  // ---------------------------------------------------------------------------

  "scm.diffDecorations": "gutter",

  // Search
  // ---------------------------------------------------------------------------

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  // Stylelint Extension
  // ---------------------------------------------------------------------------

  // Override default CSS validation in favor of Stylelint extension
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Typescript
  // ---------------------------------------------------------------------------

  // "typescript.validate.enable": false,

  // Terminal
  // ---------------------------------------------------------------------------

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.defaultProfile.osx": "fish",

  // Vim
  // ---------------------------------------------------------------------------

  // "vim.easymotion": true,
  // "vim.easymotionMarkerFontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  // "vim.easymotionMarkerFontSize": "14",
  // "vim.easymotionMarkerFontWeight": "bold",
  // "vim.easymotionMarkerHeight": 22,
  // "vim.easymotionMarkerYOffset": 0,
  "vim.debug.silent": true,
  "vim.leader": "<Space>",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.useSystemClipboard": true,
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.visualstar": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    },
    {
      "before": ["<leader>", "c", "u"],
      "commands": ["editor.action.transformToUppercase"]
    },
    {
      "before": ["<leader>", "c", "l"],
      "commands": ["editor.action.transformToLowercase"]
    },
    {
      "before": ["<leader>", "c", "s"],
      "commands": ["editor.action.transformToSnakecase"]
    },
    {
      "before": ["<leader>", "c", "t"],
      "commands": ["editor.action.transformToTitlecase"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["extension.changeCase.camel"]
    },
    {
      "before": ["<leader>", "c", "k"],
      "commands": ["extension.changeCase.kebab"]
    }
  ],

  // Window
  // ---------------------------------------------------------------------------

  "window.zoomLevel": 1,
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",
  "window.title": "${rootName}",

  // Workbench
  // ---------------------------------------------------------------------------

  "workbench.editor.decorations.colors": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.wrapTabs": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.colorTheme": "Monokai Pro",
  "workbench.startupEditor": "none",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "workbench.editor.tabCloseButton": "off",
  "workbench.iconTheme": "Monokai Pro Icons",

  // Make info, error and warning decorations in overview ruler transparent
  "workbench.colorCustomizations": {
    "editorOverviewRuler.errorForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.warningForeground": "#0000",
    "list.inactiveFocusBackground": "#0000"
  },

  // Zen Mode
  // ---------------------------------------------------------------------------

  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  "gitlens.mode.active": "zen"
}
